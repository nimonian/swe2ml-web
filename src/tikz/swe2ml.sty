% Default TikZ settings
\tikzset{
  every picture/.style={
    font=\fontsize{15pt}{16pt}\selectfont
  },
  every node/.style={
    text=c-text-1
  },
  vp-grid/.style={
    color=c-text-3
  },
  vp-axis/.style={
    ->,
    thick,
    line width=0.5mm,
    color=c-text-2
  },
  vp-point/.style={
    radius=2pt
  },
  vp-vector/.style={
    -latex,
    thick,
    line width=0.5mm,
    color=c-text-1
  },
  vp-path/.style={
    thick,
    line width=0.5mm,
    color=c-text-1
  },
  vp-angle/.style={
    draw=c-text-2,
    angle radius=8pt,
    line width=0.5mm,
  }
}

\pgfplotsset{
  vp-axes/.style={
    axis lines=middle,
    axis line style={->, thick, line width=0.5mm, color=c-text-2},
    tick style={color=c-text-2, thick},
    tick label style={text=c-text-1},
    label style={text=c-text-1},
    grid=both,
    grid style={color=c-text-3},
    smooth
  }
}